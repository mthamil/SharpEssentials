    <PackageId>SharpEssentials</PackageId>
    <Authors>Matt Hamilton</Authors>
    <Company />
    <Product>SharpEssentials</Product>
    <Description>Commonly used utility code for C#.</Description>
    <Copyright>Copyright © Matt Hamilton 2017</Copyright>
    <RepositoryUrl>https://github.com/mthamil/SharpEssentials</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/mthamil/SharpEssentials/blob/master/LICENSE</PackageLicenseUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
